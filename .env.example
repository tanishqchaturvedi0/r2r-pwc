# Copy to .env and fill in values for local development.

# Required: PostgreSQL connection string
# Examples:
#   Local: postgresql://localhost:5432/r2rpwc
#   Cloud: postgresql://user:pass@host:5432/dbname
DATABASE_URL=

# Optional: port (default 5000)
PORT=5000

# Optional: host to bind (default 0.0.0.0). Set HOST=127.0.0.1 if you get "Access denied" and only need localhost.
# HOST=127.0.0.1

# Optional: session secret for production; dev works without it
# SESSION_SECRET=

# Optional: for Approval Rules AI (Gemini); leave unset to use regex fallback
# GEMINI_API_KEY=
